{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es6"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "lib",
        "declaration": true,
        "strict": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}